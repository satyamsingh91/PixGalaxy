<div
  class="columns-2 sm:columns-3 md:columns-4 lg:columns-5 gap-4 sm:gap-6 space-y-4"
>
  <% posts.forEach(function (elem) { %>
  <div
    class="break-inside-avoid bg-white shadow-md rounded-lg overflow-hidden hover:shadow-lg transition"
  >
    <!-- Image Section -->
    <div class="w-full h-40 sm:h-48 md:h-56 bg-gray-200">
      <img
        src="<%= elem.image %>"
        alt="Pin Image"
        class="w-full h-full object-cover"
      />
    </div>

    <!-- Title & Info Section -->
    <div class="p-3">
      <h5
        class="text-sm sm:text-base text-gray-800 truncate"
        title="<%= elem.title %>"
      >
        <strong>Title:</strong> <%= elem.title %>
      </h5>
      <p
        class="mt-1 text-xs sm:text-sm text-gray-600 truncate"
        title="<%= elem.user.name %>"
      >
        <strong>User:</strong> <%= elem.user.name %>
      </p>

      <!-- Delete Button -->
      <form
        action="/delete-pin/<%= elem._id %>"
        method="POST"
        class="mt-2 text-right"
      >
        <button
          type="submit"
          class="text-red-500 hover:text-red-700 text-sm sm:text-base"
        >
          <i class="fas fa-trash-alt"></i> Delete
        </button>
      </form>
    </div>
  </div>
  <% }) %>
</div>
