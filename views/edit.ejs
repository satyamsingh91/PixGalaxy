<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Pin | Pinterest Clone</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">

    <!-- Header -->
    <header class="bg-white shadow-md">
        <div class="container mx-auto flex justify-between items-center py-4 px-6">
            <a href="/" class="text-red-500 font-bold text-xl">Pinterest</a>
            <a href="/show/posts" class="text-gray-700 hover:text-black">Back to Pins</a>
        </div>
    </header>

    <!-- Edit Pin Form -->
    <div class="max-w-2xl mx-auto mt-10 bg-white p-8 rounded-lg shadow-lg">
        <h2 class="text-2xl font-semibold text-gray-700 mb-4">Edit Your Pin</h2>
        
        <form action="/edit-pin/<%= post.id %>" method="POST" enctype="multipart/form-data" class="space-y-6">
            
            <!-- Pin Image Preview -->
            <div class="relative w-full h-60 bg-gray-200 rounded-lg overflow-hidden">
                <img id="imagePreview" src="/images/<%= post.image %>" class="w-full h-full object-cover">
                <label for="image" class="absolute inset-0 flex items-center justify-center bg-black bg-opacity-50 text-white text-sm font-semibold cursor-pointer opacity-0 hover:opacity-100 transition">
                    Change Image
                </label>
                <input type="file" id="image" name="image" class="hidden" onchange="previewImage(event)">
            </div>

            <!-- Title Input -->
            <div>
                <label class="block text-gray-600 font-semibold">Title</label>
                <input type="text" name="title" value="<%= post.title %>" required class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400">
            </div>

            <!-- Description Input -->
            <div>
                <label class="block text-gray-600 font-semibold">Description</label>
                <textarea name="description" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400" rows="3"><%= post.description %></textarea>
            </div>

            <!-- Action Buttons -->
            <div class="flex justify-between items-center">
                <a href="/show/posts" class="text-gray-500 hover:underline">Cancel</a>
                <button type="submit" class="bg-red-500 text-white px-6 py-2 rounded-full hover:bg-red-600">
                    <i class="fas fa-save mr-2"></i> Save Changes
                </button>
            </div>
        </form>
    </div>

    <!-- JS for Image Preview -->
    <script>
        function previewImage(event) {
            const reader = new FileReader();
            reader.onload = function() {
                document.getElementById('imagePreview').src = reader.result;
            };
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>

</body>
</html>
